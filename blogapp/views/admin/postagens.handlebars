<h2>Lista de postagens:</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Adicionar postagem</button></a>
<br>

{{#each postagens}}

<div class="card mt-4">
    <div class="card-body">
        <h2>{{titulo}}</h2>
        <p>{{descricao}}</p>
        <p>{{conteudo}}</p>
        <small>Data: {{data}}</small>
        <br>
        <small>Categoria: {{categoria.nome}}</small> <br>
        <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-4">Editar postagem</button></a>
        <form action="/admin/postagens/deletar" method="post">
            <input type="hidden" name="id" value="{{_id}}">
            <button type="submit" class="btn btn-danger mt-4">Deletar postagem</button>
        </form>
        
    </div>
</div>

{{else}}

<p>Nenhuma postagem cadastrada</p>

{{/each}}